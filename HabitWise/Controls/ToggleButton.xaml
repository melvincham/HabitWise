<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HabitWise.Controls.ToggleButton">
    <ContentView.Resources>
        <ResourceDictionary>
            <RoundRectangle x:Key="DefaultRoundedRectangle" CornerRadius="20" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Border 
            BindingContext="{x:Reference this}"
            BackgroundColor="{Binding ToggleBackgroundColor, FallbackValue=Transparent}"
            Stroke="{Binding Stroke, FallbackValue={StaticResource Gray500}}"
            StrokeShape="{Binding StrokeShape, FallbackValue={StaticResource DefaultRoundedRectangle}}" 
            >
        <Grid x:Name="MainGrid" 
              ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="ToggleImageBorder" 
                    Margin="3" 
                    BackgroundColor="{Binding ToggleColor, FallbackValue=Yellow}"
                    Stroke="{Binding Stroke, FallbackValue={StaticResource Gray500}}"
                    StrokeShape="Ellipse">
            </Border>
            
        </Grid>
    </Border>
</ContentView>